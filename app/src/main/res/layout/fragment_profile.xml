<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llDisplayProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="24dp" />

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:elevation="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Name Field -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="Cristal Requierme"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="@color/green_900"
                android:textSize="16sp" /> <!-- Fully opaque black -->



            <!-- Email Field -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="cristal@sample.com"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="@color/green_900"
                android:textSize="16sp" />


            <!-- Username Field -->
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="cristal"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="@color/green_900"
                android:textSize="16sp"/>

            <!-- Address Field -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="Talamban Cebu City Cebu"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="@color/green_900"
                android:textSize="16sp"/>

            <!-- Phone Number Field -->
            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="099-999-999"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="@color/green_900"
                android:textSize="16sp"/>

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button_fill"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/editProfileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="24dp" />

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:elevation="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Name Field -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_box_background"
                android:textStyle="bold"
                android:textColor="#FF000000" /> <!-- Fully opaque black -->



            <!-- Email Field -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:padding="14dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_box_background"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />


            <!-- Username Field -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:padding="14dp"
                android:background="@drawable/edittext_box_background"
                android:layout_marginBottom="12dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <!-- Password Field -->
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:padding="14dp"
                android:background="@drawable/edittext_box_background"
                android:layout_marginBottom="12dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <!-- Phone Number Field -->
            <AutoCompleteTextView
                android:id="@+id/actPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="14dp"
                android:background="@drawable/edittext_box_background"
                android:layout_marginBottom="20dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <!-- Cancel Button -->
                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_button_fill_gray"
                    android:text="Cancel"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_button_fill"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>