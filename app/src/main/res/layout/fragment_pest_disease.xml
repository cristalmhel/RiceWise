<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_500"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NSIC Rc 480"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pest and Disease Resistance"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section Title -->
            <TextView
                android:id="@+id/text_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diseases"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <!-- Disease Card: Blast -->
            <LinearLayout
                android:id="@+id/card_blast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/image_blast"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/blast"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/blast_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_blast_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blast"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_blast_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intermediate"
                        android:textStyle="italic"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/shields_blast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Disease Card: Bacterial Leaf Blight -->
            <LinearLayout
                android:id="@+id/card_bacterial_leaf_blight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/image_bacterial_leaf_blight"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bacterialleafblight"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/blb_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_bacterial_leaf_blight_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bacterial Leaf Blight"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/shields_bacterial_leaf_blight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Disease Card: Tungro -->
            <LinearLayout
                android:id="@+id/card_tungro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/image_tungro"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/tungro"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/tungro_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_tungro_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tungro"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_tungro_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Susceptible"
                        android:textStyle="italic"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/shields_tungro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Disease Card: Sheath Blight -->
            <LinearLayout
                android:id="@+id/card_sheath_blight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/image_sheath_blight"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sheathblight"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/sheath_blight_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_sheath_blight_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sheath Blight"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_sheath_blight_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Susceptible"
                        android:textStyle="italic"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/shields_sheath_blight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section Title -->
            <TextView
                android:id="@+id/text_section_title_insects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insects"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/card_brown_plant_hopper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/image_brown_plant_hopper"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/brownplanthopper"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/brown_plant_hopper_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_brown_plant_hopper_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brown Plant Hopper"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_brown_plant_hopper_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Susceptible"
                        android:textStyle="italic"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/shields_brown_plant_hopper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_green_leaf_hopper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/image_green_leaf_hopper"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/greenleafhopper"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/green_leaf_hopper_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_green_leaf_hopper_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Green Leaf Hopper"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_green_leaf_hopper_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intermediate"
                        android:textStyle="italic"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/shields_green_leaf_hopper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_yellow_stem_borer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/image_yellow_stem_borer"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/yellowstemborer"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/yellow_stem_borer_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_yellow_stem_borer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yellow Stem Borer"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_yellow_stem_borer_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intermediate"
                        android:textStyle="italic"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/shields_yellow_stem_borer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
