<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/green_500"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/rounded_button_blank"
                android:contentDescription="Back"
                android:src="@drawable/undo1"
                android:scaleType="centerInside"
                android:tint="@color/black"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Settings"
                android:textColor="#E9F5DB"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Profile Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/green_500"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:backgroundTint="#E9F5DB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Cristal Mhel"
                android:textColor="#E9F5DB"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Account Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Account Settings"
            android:textColor="#FFA115"
            android:textSize="14sp" />

        <Button
            android:id="@+id/change_password_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/green_500"
            android:text="Change password"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/add_payment_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/green_500"
            android:text="Add a payment method"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <!-- App Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="App Settings"
            android:textColor="#FFA115"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/push_notifications_row"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/green_500"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:backgroundTint="@color/green_500">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Push notifications"
                android:textColor="#E9F5DB"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/notifications_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#E9F5DB"
                android:trackTint="#40623a"
                android:checked="true" />
        </LinearLayout>

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="About"
            android:textColor="#FFA115"
            android:textSize="14sp" />

        <Button
            android:id="@+id/about_us_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/green_500"
            android:text="About us"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/privacy_policy_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/green_500"
            android:text="Privacy policy"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/help_support_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/green_500"
            android:text="Help and Support"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"
            android:text="Log out"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5252"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
